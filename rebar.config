{lib_dirs, ["deps"]}.

{deps, [
    jsx
]}.

{pre_hooks, [
    %{compile, "make -C c_src fetch"},
    {compile, "sh -c 'if [ ! -d priv ]; then make -C c_src; fi'"},
    {clean, "make -C c_src local-clean"},
    {'get-deps', "make -C c_src deps"},
    {'delete-deps', "make -C c_src local-clean-all"}
]}.
